<entity-model id="activity" name="activity" title="首页活动管理"
	enable-delete="true" enable-modity="true" version="2.0" cache-enabled="true">
	<operations>
		<operation id="activitymodelopadduuid" name="addActivity"
			title="新增" enable-delete="true" enable-modity="true" type="add"
			fixed-size="false" modal="true">
			<condition-fields>
				<condition-field editable="false" hidden="false"
					field-id="activity_uuid_uuid" connect-mode="AND" />
			</condition-fields>
			<operation-group id="addopbasicgroup" name="basicgroup"
				title="基本信息" enable-delete="true" enable-modity="true">
				<operation-fields>
					<operation-field editable="false" hidden="true"
						field-id="activity_uuid_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_name_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_link_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="picture_uuid_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_description_uuid">
						<input-mode type="textAreaLeftMode"></input-mode>
					</operation-field>
				</operation-fields>
			</operation-group>
		</operation>
		<operation id="activitymodelopupdateuuid" name="modifyActivity"
			title="修改" enable-delete="true" enable-modity="true" type="modify"
			fixed-size="false" modal="true">
			<condition-fields>
				<condition-field editable="false" hidden="false"
					field-id="activity_uuid_uuid" connect-mode="AND" />
			</condition-fields>
			<operation-group id="modifyopbasicgroup" name="basicgroup"
				title="基本信息" enable-delete="true" enable-modity="true">
				<operation-fields>
					<operation-field editable="false" hidden="true"
						field-id="activity_uuid_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_name_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_link_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="picture_uuid_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_description_uuid">
						<input-mode type="textAreaLeftMode"></input-mode>
					</operation-field>
				</operation-fields>
			</operation-group>
		</operation>
		<operation id="activitymodelopdeleteuuid" name="deleteActivity"
			title="删除" enable-delete="true" enable-modity="true" type="delete"
			fixed-size="false" modal="true">
			<condition-fields>
				<condition-field editable="false" hidden="false"
					field-id="activity_uuid_uuid" connect-mode="AND" />
			</condition-fields>
			<operation-group id="deleteopbasicgroup" name="basicgroup"
				title="基本信息" enable-delete="true" enable-modity="true">
				<operation-fields>
					<operation-field editable="false" hidden="true"
						field-id="activity_uuid_uuid" />
				</operation-fields>
			</operation-group>
		</operation>
		<operation id="activitymodelopqueryuuid" name="viewActivity"
			title="查看" enable-delete="true" enable-modity="true" type="view"
			fixed-size="false" modal="true">
			<condition-fields>
				<condition-field editable="false" hidden="false"
					field-id="activity_uuid_uuid" connect-mode="AND" />
			</condition-fields>
			<operation-group id="viewopbasicgroup" name="basicgroup"
				title="基本信息" enable-delete="true" enable-modity="true">
				<operation-fields>
					<operation-field editable="false" hidden="true"
						field-id="activity_uuid_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_name_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_link_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_description_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="picture_uuid_uuid" />
				</operation-fields>
			</operation-group>
		</operation>
		<operation id="activitymodelopaddcopyuuid" name="copyAddActivity"
			title="拷贝添加" enable-delete="true" enable-modity="true" type="copyAdd"
			fixed-size="false" modal="true">
			<condition-fields>
				<condition-field editable="false" hidden="false"
					field-id="activity_uuid_uuid" connect-mode="AND" />
			</condition-fields>
			<operation-group id="copyAddopbasicgroup" name="basicgroup"
				title="基本信息" enable-delete="true" enable-modity="true">
				<operation-fields>
					<operation-field editable="true" hidden="false"
						field-id="activity_name_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_link_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="picture_uuid_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="activity_description_uuid">
						<input-mode type="textAreaLeftMode"></input-mode>
					</operation-field>
				</operation-fields>
			</operation-group>
		</operation>
	</operations>
	<views>
		<view id="activitymodeloptableuuid" name="tableactivity" title="表格查询"
			enable-delete="true" enable-modity="true" type="table" page-size="10"
			allow-edit="false" allow-filter-front="false" fixed-size="false"
			modal="false" front-paging="false">
			<condition-fields>
				<condition-field editable="true" hidden="false"
					field-id="activity_name_uuid" connect-mode="AND" compare-mode="containsWith" />
				<condition-field editable="true" hidden="false"
					field-id="activity_link_uuid" connect-mode="AND" compare-mode="containsWith" />
			</condition-fields>
			<view-groups>
				<view-group id="viewbasicgroup" name="basicgroup" title="基本信息"
					enable-delete="true" enable-modity="true">
					<display-field editable="false" hidden="true"
						field-id="activity_uuid_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="activity_name_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="activity_link_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="activity_description_uuid" aggregate-by-view="false" />
				</view-group>
			</view-groups>
			<references>
				<operation-reference type="operation"
					id="activitymodelopadduuid" />
				<operation-reference type="operation"
					id="activitymodelopaddcopyuuid" />
				<operation-reference type="operation"
					id="activitymodelopdeleteuuid" />
				<operation-reference type="operation"
					id="activitymodelopupdateuuid" />
				<operation-reference type="operation"
					id="activitymodelopqueryuuid" />
			</references>
		</view>

		<view id="queryAllActivity" name="queryAllActivity" title="查询所有活动"
			enable-delete="true" enable-modity="true" type="table" 
			allow-edit="false" allow-filter-front="false" fixed-size="false"
			modal="false" front-paging="false">
			<view-groups>
				<view-group id="viewbasicgroup" name="basicgroup" title="基本信息"
					enable-delete="true" enable-modity="true">
					<display-field editable="false" hidden="true"
						field-id="activity_uuid_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="activity_name_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="activity_link_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="activity_description_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="picture_uuid_uuid" aggregate-by-view="false" />	
				</view-group>
			</view-groups>
		</view>
	</views>
	<groups>
		<group id="basicgroup" name="basicgroup" title="基本信息"
			enable-delete="true" enable-modity="true">
			<field standard-field-id="activity_uuid" primary="true" unique="true"
				display="false" not-null="false" auto-increase="false" editable="false"
				hidden="false" table-field="true" id="activity_uuid_uuid" />
			<field standard-field-id="activity_name" primary="false"
				unique="false" display="false" not-null="false" auto-increase="false"
				editable="false" hidden="false" table-field="true" id="activity_name_uuid">
				<validate-rules>
					<validate-rule rule-name="required" rule-value=""
						messege="名称不能为空" />
				</validate-rules>
			</field>
			<field standard-field-id="activity_link" primary="false"
				unique="false" display="false" not-null="false" auto-increase="false"
				editable="false" hidden="false" table-field="true" id="activity_link_uuid" />
			<field standard-field-id="activity_description" primary="false"
				unique="false" display="false" not-null="false" auto-increase="false"
				editable="false" hidden="false" table-field="true"
				id="activity_description_uuid" />
			<field standard-field-id="picture_uuid" primary="false" unique="false"
				display="false" not-null="false" auto-increase="false" editable="false"
				hidden="false" table-field="true" id="picture_uuid_uuid" />
		</group>
	</groups>
</entity-model>