<relation-model id="productRelation" name="productRelation" title="产品关联操作" main-bean-type="product">
	<operations>
		<operation id="updateProductRelation" name="updateProductRelation"
			title="修改" enable-delete="true" enable-modity="true" type="update"
			fixed-size="false" modal="true">
			<condition-fields>
				<condition-field editable="false" hidden="false"
					field-id="product_uuid_uuid" connect-mode="AND" />
			</condition-fields>
			<operation-group id="addopbasicgroup" name="basicgroup"
				title="基本信息" enable-delete="true" enable-modity="true">
				<operation-fields>
					<operation-field editable="false" hidden="true"
						field-id="product_uuid_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="product_name_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="product_fare_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="online_time_uuid">
						<input-mode type="dateMode"></input-mode>
					</operation-field>
					<operation-field editable="true" hidden="false"
						field-id="product_stock_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="product_delivery_uuid" >
					    <input-mode type="dictComboMode"
							class="org.tinygroup.entity.common.DictInputMode" dictType="product_delivery"></input-mode>	
					</operation-field>
					<operation-field editable="true" hidden="false"
						field-id="unit_price_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="product_norm_uuid" />
					<operation-field editable="true" hidden="true"
						field-id="shop_uuid_uuid" />
					<operation-field editable="false" hidden="false"
						field-id="shop_name_uuid" />	
					<operation-field editable="true" hidden="true"
						field-id="picture_uuid_uuid" />
					<operation-field editable="false" hidden="false"
						field-id="picture_name_uuid" />	
					<operation-field editable="true" hidden="false"
						field-id="product_selled_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="product_modify_uuid" >
					   <input-mode type="dateMode"></input-mode>
					</operation-field>
					<operation-field editable="true" hidden="false"
						field-id="product_discount_uuid" />
					<operation-field editable="true" hidden="false"
						field-id="product_priority_uuid" >
					   	 <input-mode type="dictComboMode"
							class="org.tinygroup.entity.common.DictInputMode" dictType="product_priority"></input-mode>	
					</operation-field>
					<operation-field editable="true" hidden="true"
						field-id="class_uuid_uuid" />
					<operation-field editable="false" hidden="true"
						field-id="class_name_uuid" />	
					<operation-field editable="true" hidden="false"
						field-id="product_description_uuid">
						<input-mode type="textAreaLeftMode"></input-mode>
					</operation-field>	
					<operation-field editable="true" hidden="false"
						field-id="product_detial_uuid">
						<input-mode type="simpleEditorTopMode"></input-mode>
					</operation-field>	
				</operation-fields>
			</operation-group>
		</operation>
	</operations>	
	
	<views>
		<view id="productRealationQuery" name="productRealationQuery" title="表格查询"
			enable-delete="true" enable-modity="true" type="table" page-size="10"
			allow-edit="false" allow-filter-front="false" fixed-size="false"
			modal="false" front-paging="false">
			<condition-fields>
				<condition-field editable="true" hidden="false"
					field-id="product_name_uuid" connect-mode="AND" compare-mode="containsWith" />
				<condition-field editable="true" hidden="false"
					field-id="online_time_uuid" connect-mode="AND" compare-mode="containsWith">
					<input-mode type="dateMode"></input-mode>
				</condition-field>
				<condition-field editable="true" hidden="false"
					field-id="product_stock_uuid" connect-mode="AND" compare-mode="containsWith" />
				<condition-field editable="true" hidden="false"
					field-id="shop_uuid_uuid" connect-mode="AND" compare-mode="containsWith" />
				<condition-field editable="true" hidden="false"
					field-id="product_discount_uuid" connect-mode="AND" compare-mode="containsWith" />
				<condition-field editable="true" hidden="false"
					field-id="product_delivery_uuid" connect-mode="AND" compare-mode="containsWith">
					<input-mode type="dictComboMode "
						class="org.tinygroup.entity.common.DictInputMode" dictType="product_delivery"></input-mode>
				</condition-field>
				<condition-field editable="true" hidden="false"
					field-id="product_priority_uuid" connect-mode="AND" compare-mode="containsWith">
					<input-mode type="dictComboMode "
						class="org.tinygroup.entity.common.DictInputMode" dictType="product_priority"></input-mode>
				</condition-field>
			</condition-fields>
			<view-groups>
				<view-group id="viewbasicgroup" name="basicgroup" title="基本信息"
					enable-delete="true" enable-modity="true">
					<display-field editable="false" hidden="true"
						field-id="product_uuid_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="product_name_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="product_fare_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="online_time_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="product_stock_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="product_delivery_uuid" aggregate-by-view="false" >
					      <input-mode type="dictLabelMode "
	                         class="org.tinygroup.entity.common.DictInputMode" dictType="product_delivery">
	                     </input-mode>	
					</display-field>
					<display-field editable="false" hidden="false"
						field-id="product_discount_uuid" aggregate-by-view="false" />	
					<display-field editable="false" hidden="false"
						field-id="unit_price_uuid" aggregate-by-view="false" />
					<display-field editable="false" hidden="false"
						field-id="product_norm_uuid" aggregate-by-view="false" />
				</view-group>
			</view-groups>
			<references>
				<operation-reference type="operation"
					id="productmodelopadduuid" model-id="product" />
				<operation-reference type="operation"
					id="productmodelopaddcopyuuid" model-id="product"  />
				<operation-reference type="operation"
					id="productmodelopdeleteuuid"  model-id="product" />
				<operation-reference type="operation"
					id="updateProductRelation" />
				<operation-reference type="operation"
					id="productmodelopqueryuuid"  model-id="product" />
			</references>
			</view>
	</views>
	
	<model-references>
	    <model-reference relation-id="productShopRelation" />
	    <model-reference relation-id="productPictureRelation" />
	    <model-reference relation-id="productClassRelation" />
	    <model-reference relation-id="userShopRelation" />
	</model-references>
	
	
	<relation-groups>
		<relation-group id="basicgroup" name="basicgroup" title="基本信息"
			enable-delete="true" enable-modity="true">
			<relation-field   field-id="shop_uuid_uuid" model-id="shop"/>
			<relation-field   field-id="shop_name_uuid" model-id="shop"/>
			<relation-field   field-id="user_uuid_uuid" model-id="user"/>
			<relation-field   field-id="user_id_uuid" model-id="user"/>
			<relation-field   field-id="user_name_uuid" model-id="user"/>
			<relation-field   field-id="product_uuid_uuid" model-id="product"/>
			<relation-field   field-id="product_name_uuid" model-id="product"/>
			<relation-field   field-id="product_fare_uuid" model-id="product"/>
			<relation-field   field-id="online_time_uuid" model-id="product"/>
			<relation-field   field-id="product_stock_uuid" model-id="product"/>
			<relation-field   field-id="product_delivery_uuid" model-id="product"/>
			<relation-field   field-id="unit_price_uuid" model-id="product"/>
			<relation-field   field-id="product_norm_uuid" model-id="product"/>
			<relation-field   field-id="product_description_uuid" model-id="product"/>
			<relation-field   field-id="product_detial_uuid" model-id="product"/>
			<relation-field   field-id="product_selled_uuid" model-id="product"/>
			<relation-field   field-id="product_modify_uuid" model-id="product"/>
			<relation-field   field-id="product_discount_uuid" model-id="product"/>
			<relation-field   field-id="product_priority_uuid" model-id="product"/>
			<relation-field   field-id="class_uuid_uuid" model-id="productClass"/>
			<relation-field   field-id="class_name_uuid" model-id="productClass"/>
			<relation-field   field-id="picture_uuid_uuid" model-id="picture"/>
			<relation-field   field-id="picture_name_uuid" model-id="picture"/>
			<relation-field   field-id="picture_link_uuid" model-id="picture"/>
		</relation-group>
	</relation-groups>
</relation-model>