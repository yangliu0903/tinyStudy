#callService("processModelService" "requestName=EntityModel_treeWithCode_productClass_productClassTree" "modelProcessResult" "categorys")

#foreach($category in $categorys)
<div style="width:310px;float:left;padding:5px">
#@shadowBox()
	#link("/mainsite2/detail/product.page?categoryid=$category.value&categoryname=$category.text" "<b>$category.text</b>")
	<hr />
	#if( $category.nodes.size()>0)
		#foreach($subcategory in $category.nodes)
			#link("/mainsite2/detail/product.page?categoryid=$category.value&categoryname=$category.text&firstViewCategory=$subcategory.id&firstViewCategoryName=$subcategory.text" "$subcategory.text")
		#end
	#end
#end
</div>
#end			
