	<bean id="secondActionAccountDataSource" name="secondActionAccountDataSource"
		class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="url">
			<value>jdbc:mysql://192.168.51.28:3306/second-action?createDatabaseIfNotExist=true</value>
		</property>
		<property name="username">
			<value>root</value>
		</property>
		<property name="password">
			<value>123456</value>
		</property>
	</bean>

	<bean id="secondActionSqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		<property name="configLocation" value="ibatis/sqlmap.xml">
		</property>
		<property name="dataSource" ref="secondActionAccountDataSource" />
	</bean>
	<bean id="secondActionTransactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource">
			<ref bean="secondActionAccountDataSource" />
		</property>
	</bean>

	<bean id="secondActionTransactionTemplate"
		class="org.springframework.transaction.support.TransactionTemplate">
		<property name="transactionManager">
			<ref bean="secondActionTransactionManager" />
		</property>
		 <property name="propagationBehaviorName">
            <value>PROPAGATION_REQUIRES_NEW</value>
        </property>
	</bean>
	<bean id="secondActionAccountDAO" class="org.tinygroup.dts.client.sample.action.dao.impl.AccountDAOImpl">
		<property name="sqlMapClient" ref="secondActionSqlMapClient" />
	</bean>
	<bean id="secondActionAccountTransactionDAO" class="org.tinygroup.dts.client.sample.action.dao.impl.AccountTransactionDAOImpl">
		<property name="sqlMapClient" ref="secondActionSqlMapClient" />
	</bean>
</beans>  