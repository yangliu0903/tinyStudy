#macro(tab $id)
<div id="$id" class="tabbed-box">
$bodyContent
</div>
<script>
var ${id}currentTab = 0; // Set to a different number to start on a different tab.
$(document).ready(function() {
   $("#$id .tabs li:eq(0) a").css("border-left", "none");
   
   $("#$id .tabs li a").click(function() {
     var thisTab = $("#$id .tabs a").index($(this));
	   $("#$id .tabs li a").removeClass("active");
	   $("#$id .tabs li a:eq("+thisTab+")").addClass("active");
	   $("#$id .tabbed-content").hide();
	   $("#$id .tabbed-content:eq("+thisTab+")").show();
	   ${id}currentTab = thisTab;
      return false; 
   });
   
   $("#$id .tabs li a:eq("+${id}currentTab+")").click()
});
</script>
#end

