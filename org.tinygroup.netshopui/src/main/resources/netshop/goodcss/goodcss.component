#macro(baiduMap $mapName $centerX $centerY $width $height)
<div id="${mapName}Div" style="width:$width;height:$height;"></div>
<script>
$(document).ready(function() {
var $mapName = new BMap.Map("${mapName}Div");
$!bodyContent
${mapName}.centerAndZoom(new BMap.Point($centerX, $centerY),15);// 初始化地图,设置中心点坐标和地图级别。
