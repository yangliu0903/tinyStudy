<form action="${TINY_CONTEXT_PATH}/offer.pageflow">
 姓名:<input type="text" name="name" value="$!offer.name" /><br/>
 金额:<input type="text" name="money" value="$!offer.money" /><br/>
 备注:<input type="text" name="remark" value="$!offer.remark" /><br/>
 日期:<input type="text" name="date" value="$!dateFormatUtils.format($!offer.date,'yyyy-MM-dd HH:mm:ss')" /><br/>
 <input type="hidden" name="id" value="$!offer.id"/>
 #if($offer)
 <input type="hidden" name="tiny_flow_id" value="updateOffer"/>
 #else
 <input type="hidden" name="tiny_flow_id" value="addOffer"/>
 #end
<input type="submit" value="提交">
</form>