<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                    http://www.springframework.org/schema/context
                    http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-autowire="byName" default-lazy-init="true">

	<bean id="lobHandler" class="org.springframework.jdbc.support.lob.DefaultLobHandler"
		lazy-init="true" />

	<bean id="defaultDataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName">
			<value>oracle.jdbc.driver.OracleDriver</value>
		</property>
		<property name="url">
			<value>jdbc:oracle:thin:@192.168.71.52:1521:jrestest</value>
		</property>
		<property name="username">
			<value>jrestest1</value>
		</property>
		<property name="password">
			<value>jrestest1</value>
		</property>
	</bean>

	<bean id="dataSource1" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>org.apache.derby.jdbc.EmbeddedDriver</value>
		</property>
		<property name="url">
			<value>jdbc:derby:TESTDB;create=true</value>
		</property>
		<property name="username">
			<value>opensource</value>
		</property>
		<property name="password">
			<value>opensource</value>
		</property>
	</bean>
	<bean id="dataSource2" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>org.apache.derby.jdbc.EmbeddedDriver</value>
		</property>
		<property name="url">
			<value>jdbc:derby:TESTDB1;create=true</value>
		</property>
		<property name="username">
			<value>opensource</value>
		</property>
		<property name="password">
			<value>opensource</value>
		</property>
	</bean>
	<bean id="dataSource3" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="url" value="jdbc:mysql://192.168.51.29:3306/sample?createDatabaseIfNotExist=true">
		</property>
		<property name="username">
			<value>root</value>
		</property>
		<property name="password">
			<value>123456</value>
		</property>
	</bean>

	<bean id="dynamicDataSource" class="org.tinygroup.datasource.DynamicDataSource">
		<property name="dataSource" ref="dataSource3" />
	</bean>

	<bean id="dataSourceTransactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource">
			<ref bean="dynamicDataSource" />
		</property>
	</bean>
	<bean id="transactionTemplate"
		class="org.springframework.transaction.support.TransactionTemplate">
		<property name="transactionManager">
			<ref local="dataSourceTransactionManager" />
		</property>
	</bean>

	<!-- <tx:annotation-driven transaction-manager="transactionManager" proxy-target-class="true" 
		/> -->

	<!-- 在此进行自动代理配置 -->
	<bean id="beanNameAutoProxyCreator"
		class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
		<property name="proxyTargetClass" value="true" />
		<property name="beanNames">
			<list>
				<value>*Impl</value>
			</list>
		</property>
	</bean>
	<!-- <aop:config> <aop:aspect id="deal" ref="SpringTest"> <aop:pointcut 
		id="target" expression="execution(* org.tinygroup..*.*(..))" /> <aop:before 
		method="test" pointcut-ref="target" /> </aop:aspect> </aop:config> -->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dynamicDataSource" />
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dynamicDataSource" />
		<property name="mappingResources">
			<list>
				<value>hbm/User.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect  
                </prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
	</bean>

	<bean id="hibernateCrudDao" class="org.tinygroup.crud.dao.impl.HibernateCrudDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="hibernateCrudService" class="org.tinygroup.crud.service.impl.HibernateCrudService">
		<property name="crudDbDao" ref="hibernateCrudDao" />
	</bean>

	<bean id="tinyDbCrudDao" class="org.tinygroup.crud.dao.impl.TinyDbCrudDao">
		<property name="manager" ref="beanOperatorManager" />
	</bean>

	<bean id="tinyDbCrudService" class="org.tinygroup.crud.service.impl.TinyDbCrudService">
		<property name="crudDbDao" ref="tinyDbCrudDao" />
	</bean>

	<bean id="mysqlDialect" class="org.tinygroup.tinydb.dialect.impl.MySQLDialect">
		<property name="incrementer" ref="mysqlIncrementer"></property>
	</bean>
	<bean id="mysqlIncrementer"
		class="org.springframework.jdbc.support.incrementer.MySQLMaxValueIncrementer">
		<property name="dataSource" ref="dynamicDataSource"></property>
		<property name="incrementerName" value="incrementer"></property>
		<property name="columnName" value="sequence_id"></property>
		<property name="cacheSize" value="100"></property>
	</bean>
	<bean id="beanStringOperator" class="org.tinygroup.tinydb.operator.impl.BeanStringOperator"
		scope="prototype">
		<constructor-arg ref="jdbcTemplate"></constructor-arg>
		<property name="dialect" ref="mysqlDialect"></property>
	</bean>

    <bean id="metadataTableConfigConvert"
		class="org.tinygroup.tinydb.convert.impl.MetadataTableConfigConvert">
		<property name="dataSource">
		  <ref bean="dynamicDataSource"/>
		</property>
	</bean>
	<bean id="databaseTableConfigConvert"
		class="org.tinygroup.tinydb.convert.impl.DatabaseTableConfigConvert">
		<property name="database" value="mysql">
		</property>
	</bean>
</beans>
