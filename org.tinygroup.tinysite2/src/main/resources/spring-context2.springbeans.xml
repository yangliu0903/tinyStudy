<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                    http://www.springframework.org/schema/context
                    http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-autowire="byName" default-lazy-init="true">
	<context:component-scan base-package="org.tinygroup" />

	<bean id="lobHandler" class="org.springframework.jdbc.support.lob.DefaultLobHandler"
		lazy-init="true" />

	<bean id="defaultDataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName">
			<value>oracle.jdbc.driver.OracleDriver</value>
		</property>
		<property name="url">
			<value>jdbc:oracle:thin:@192.168.71.52:1521:jrestest</value>
		</property>
		<property name="username">
			<value>jrestest1</value>
		</property>
		<property name="password">
			<value>jrestest1</value>
		</property>
	</bean>

	<bean id="dataSource1" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>org.apache.derby.jdbc.EmbeddedDriver</value>
		</property>
		<property name="url">
			<value>jdbc:derby:TESTDB;create=true</value>
		</property>
		<property name="username">
			<value>opensource</value>
		</property>
		<property name="password">
			<value>opensource</value>
		</property>
	</bean>
	<bean id="dataSource2" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>org.apache.derby.jdbc.EmbeddedDriver</value>
		</property>
		<property name="url">
			<value>jdbc:derby:TESTDB1;create=true</value>
		</property>
		<property name="username">
			<value>opensource</value>
		</property>
		<property name="password">
			<value>opensource</value>
		</property>
	</bean>

	<bean id="dynamicDataSource" class="org.tinygroup.dynamicdatasource.DynamicDataSource">
		<property name="dataSource" ref="dataSource1" />
	</bean>

	<bean id ="dataSourceTransactionManager" class ="org.springframework.jdbc.datasource.DataSourceTransactionManager"> 
         <property name ="dataSource"> 
             <ref bean ="dynamicDataSource"/> 
         </property> 
     </bean> 
	<bean id="transactionTemplate"
		class="org.springframework.transaction.support.TransactionTemplate">
		<property name="transactionManager">
			<ref local="dataSourceTransactionManager" />
		</property>
	</bean>

	<!-- <tx:annotation-driven transaction-manager="transactionManager" proxy-target-class="true" 
		/> -->

