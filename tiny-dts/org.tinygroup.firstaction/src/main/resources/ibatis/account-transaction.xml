<?xml version="1.0" encoding="UTF-8" ?>  
  
<!DOCTYPE sqlMap        
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"        
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap>
	<resultMap class="org.tinygroup.firstaction.action.AccountTransaction"
		id="accountTransaction">
		<result property="txId" column="tx_id"  javaType="java.lang.String"/>
		<result property="accountNo" column="account_no"  javaType="java.lang.String"/>
		<result property="type" column="type"  javaType="java.lang.String"/>
		<result property="amount" column="amount" javaType="java.lang.Double" />
	</resultMap>
	<select id="getAccountTransaction" resultMap="accountTransaction">
		select * from
		account_transaction where tx_id=#txId#
	</select>
	<insert id="addAccountTransaction"
		parameterClass="org.tinygroup.firstaction.action.AccountTransaction">
		insert into
		account_transaction(tx_id,account_no,amount,type)
		values(#txId#,#accountNo#,#amount#,#type#)
	</insert>
	<delete id="deleteAccountTransaction">
		delete from account_transaction where tx_id =#txId#
	</delete>
</sqlMap>  